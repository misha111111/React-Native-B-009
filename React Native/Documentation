Before 2 months
    createStackNavigator - Stack Panel 
    createTabNavigator - Tab Panel

    createTabNavigator(routes, routeOptions);

    // Tabs - Contacts, Calls, Status
    const routes = {
        contact: {
            screen: ContactScreen
        },
        calls: {
            screen: CallScreen
        },
        status: {
            screen: StatusScreen
        }
    }
    createTabNavigator(routes)

    StackPanel => LoginScreen, HomeScreen

    const routes = {
        logout: {
            screen: LogoutScreen
        } 
        login: {
            screen: LoginScreen
        },
        home: {
            screen: HomeScreen
        }
    }

    const routeOptions = {
        intialRouteName: 'login'
    }
    createStackNavigator(routes, routeOptions)

    this.props.history.push('/home');
    this.props.navigator.navigate('home')

